---
import Layout from "../layouts/BaseLayout.astro";
import OurProgress from "../components/OurProgress.astro";
import Philosophy from "../components/Philosophy.astro";
import Features from "../components/Features.astro";
import Blueprint from "../components/Blueprint.astro";
import Guide from "../components/Guide.astro";
import FAQ from "../components/FAQ.astro";
import Hero from "../components/Hero.astro";
import type { Language } from "../i18n/utils";

interface Props {
	lang: Language;
}

const { lang } = Astro.props;
---

<Layout lang={lang} title="Where To Park">
	<div
		class="flex max-md:flex-col justify-between items-center px-8 md:px-36"
	>
		<Hero lang={lang} />
	</div>

	<div
		class="bg-blue-50 text-black w-screen left-0 py-4 px-4 text-black text-center my-12"
	>
		<Philosophy lang={lang} />
	</div>

	<div class="w-full relative mx-auto max-w-4xl px-4">
		<Features lang={lang} />
	</div>

	<div class="bg-blue-50 py-16 my-32 px-4">
		<Blueprint lang={lang} />
	</div>

	<div class="relative mx-auto mx-auto max-w-4xl px-6">
		<Guide lang={lang} />
	</div>

	<div class="bg-blue-50 py-16 my-32">
		<OurProgress lang={lang} />
	</div>

	<div class="w-full relative mx-auto max-w-4xl px-2">
		<FAQ lang={lang} />
	</div>
</Layout>

<style></style>
