---
import { Image } from "astro:assets";
import AppStore from "../components/AppStore.astro";
import GooglePlay from "../components/GooglePlay.astro";
import iosPreview from "../assets/ios-preview.webp";
import { useTranslations, type Language } from "../i18n/utils";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="flex flex-col">
    <div class="flex flex-col gap-4">
        <h1 class="font-bold text-4xl">{t("hero.headline")}.</h1>
        <h2 class="text-xl" set:html={t("hero.subheadline")} />
    </div>
    <div class="py-6">
        <div class="flex flex-row justify-center items-center">
            <AppStore />
            <GooglePlay />
        </div>
        <h3 class="text-center text-sm">
            <span>{t("or")}</span>
            <a href="https://web.wheretopark.app" class="link link-primary"
                >{t("hero.openAppInBrowser")}</a
            >
        </h3>
    </div>
</div>
<div>
    <Image
        src={iosPreview}
        alt="ios screenshot preview"
        class="w-64"
        width={512}
    />
</div>
